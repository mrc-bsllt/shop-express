  <%- include('../partials/header') %>
  <h1>CART PAGE</h1> 

  <% if(products.length) { %>
    <ul>
      <% products.forEach(product => { %>
       <li><%= product.title %> - <strong>Quantity: <%= product.quantity %></strong></li>
      <% }) %>
