<%- include('../partials/top-document') %> 
  <link rel="stylesheet" href="/css/forms.css">
  <link rel="stylesheet" href="/css/product.css">
</head>

<body>
  <%- include('../partials/header') %>
  <main>
    <form class="product-form" action="/admin/edit-product" method="POST">
        <div class="form-control">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" value="<%= product.title %>" />
        </div>
        <div class="form-control">
          <label for="image_url">Image URL</label>
          <input type="text" name="image_url" id="image_url" value="<%= product.image_url %>" />
        </div>
        <div class="form-control">
          <label for="description">Description</label>
          <textarea name="description" id="description" cols="30" rows="10"><%= product.description %></textarea>
        </div>
        <div class="form-control">
          <label for="price">Price</label>
          <input type="number" name="price" id="price" step="0.01" value="<%= product.price %>" />
        </div>

        <input type="hidden" name="id" value="<%= product.id %>" />
        <input type="hidden" name="createdAt" value="<%= product.createdAt %>" />

        <button class="btn" type="submit">Edit Product</button>
    </form>
  </main>

<%- include('../partials/footer') %>